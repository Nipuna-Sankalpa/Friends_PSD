{# empty Twig template #}

{% extends "PsdFriendsBundle:Default:index.html.twig"%}
{# change backgound image#}
{%block bodyStyle%}
    background-image: url({{asset('img/loginBackground.jpg')}});
{% endblock %}
{# ============================================#}
{% block styleSheet%}
    <link href="{{asset('css/loginCustom.css')}}" rel="stylesheet">
    <link href="{{asset('css/parsley.css')}}" rel="stylesheet">

{% endblock %}
{# insert login form#}
{% block navBar%}
    <form class="navbar-form navbar-left" method="post" role="search" action="{{path('psd_friends_login')}}">
        <div class="form-group">

            <!--login fail message-->
            {% if msg%}
                <span style="color:#FFFFFF">{{msg}} !!!!</span>
            {% endif%} 
            <!--login fail message-->

            <input name="mail" type="text" class="form-control" placeholder="Enter E-mail">
            <input name="password" type="password" style="margin-top: 2px;" class="form-control" placeholder="Enter Password">
        </div>
        <button type="submit" class="btn btn-info">Login</button>

    </form>
{% endblock %}
{# ============================================#}

{# insert Sign Up form#}
{% block body%}

    <div>
        <form id="sign_up_form" class="navbar-form navbar-right" method="post" role="search" action="{{path('sign_up')}}">
            <div class="form-group signUpForm">
                <h4 style="font-size: 25px">Sign Up</h4>
                <input type="text" name="first_name" class="form-control" placeholder="First Name" data-validate="required"><br />
                <input type="text" name="last_name" class="form-control" placeholder="Last Name" style="margin-top: 1em;" data-validate="required"><br />
                <input type="email" name="email" class="form-control" placeholder="E-mail" style="margin-top: 1em;" data-validate="required,email"><br />
                <input id="password" type="password" name="password" class="form-control" placeholder="Enter Password" style="margin-top: 1em;" data-validate="required,size(8,16)"><br />
                <input id="re-password" type="password" name="re-password" class="form-control" placeholder="Re-Enter Password" style="margin-top: 1em;" data-validate="required,checkPW"><br />
                <button type="submit" class="btn btn-info" style="margin-top: 1em;margin-right:2em;">Sign Up</button>

            </div>

        </form>
    </div>


{% endblock%}
{# ============================================#}
{# import validate js plugin#}
{% block javascripts %}
    <script src="{{asset('js/notify.min.js')}}" type="text/javascript"></script>
    <script src="{{asset('js/verify.notify.min.js')}}" type="text/javascript"></script>

    <script>
        $.verify.addRules({
            checkPW: function(r) {
                var n = $("#password").val();
                ;
                var temp = $("#re-password").val();
                if (n === temp) {
                    return true;
                }
                return "Passwords do not match";
            }
        });

    </script>

{% endblock %}