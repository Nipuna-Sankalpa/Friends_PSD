{# empty Twig template #}
{% extends "PsdFriendsBundle:Default:index.html.twig"%}

{# change backgound image#}
{%block bodyStyle%}
    background-image: url({{asset('img/loginBackground.jpg')}});
{% endblock %}
{# ============================================#}

{# insert login form#}
{% block navBar%}
    <form class="navbar-form navbar-left" role="search" action="{{path('psd_friends_login')}}">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Enter E-mail">
            <input type="password" class="form-control" placeholder="Enter Password">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
{% endblock %}
{# ============================================#}

